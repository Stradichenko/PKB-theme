@import "./global/variables.css";header{background-color:var(--header-bg-color);color:var(--header-text-color);padding:var(--header-padding);box-shadow:var(--header-shadow);position:relative;z-index:1000;width:100%;margin:0;font-family:var(--header-font-family)}header .logo{font-size:var(--header-font-size);font-weight:700;text-decoration:none;color:var(--header-logo-color)}header .logo:hover{color:var(--header-logo-hover-color)}header nav{display:flex;justify-content:space-between;align-items:center;max-width:1200px;margin:0 auto;width:100%;gap:var(--header-nav-gap)}header nav ul{list-style:none;margin:0;padding:0;display:flex;gap:var(--header-nav-gap)}header nav ul li{display:inline-block}header nav ul li a{text-decoration:none;color:var(--header-nav-link-color);font-size:1rem;padding:var(--spacing-small)var(--spacing-medium);border-radius:var(--border-radius);transition:background-color .3s,color .3s}header nav ul li a:hover{background-color:var(--header-nav-link-hover-bg);color:var(--header-nav-link-hover-color)}@media(max-width:768px){header nav{flex-direction:column;align-items:flex-start}header nav ul{flex-direction:column;gap:10px}}